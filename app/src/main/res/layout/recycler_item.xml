<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/recycler_item" android:orientation="horizontal"
              android:gravity="center" android:layout_marginHorizontal="5dp" android:layout_marginVertical="5dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/image_item" android:layout_weight="1" android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
</LinearLayout>